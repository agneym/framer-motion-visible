{
  "name": "framer-motion-visible",
  "version": "0.0.1",
  "description": "Utility function to trigger framer motion animations when a node is visible in the viewport",
  "source": "src/index.js",
  "main": "dist/fm-visible.js",
  "module": "dist/fm-visible.module.js",
  "unpkg": "dist/fm-visible.umd.js",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "release": "np --no-tests"
  },
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=16",
    "framer-motion": ">=2"
  },
  "keywords": [
    "react",
    "framer-motion",
    "animation"
  ],
  "author": "Agney <agney@outlook.in>",
  "license": "MIT",
  "devDependencies": {
    "framer-motion": "^2.9.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "microbundle": "^0.12.4",
    "np": "^7.0.0",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "react-intersection-observer": "^8.30.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agneym/framer-motion-visible.git"
  }
}
